@model MvcApplication1.Models.NewsModels

@{
    ViewBag.Title = "详情";
}

<h2>详情</h2>

<fieldset>
    <legend>新闻信息管理</legend>

    <div class="display-label">标题</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">类型</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.NewType)
    </div>

    <div class="display-label">内容</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Content)
    </div>

    <div class="display-label">发布日期</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PubDate)
    </div>

    <div class="display-label">用户名</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserName)
    </div>

    <div class="display-label">备注</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Remark)
    </div>
</fieldset>
<p>
    @Html.ActionLink("编辑", "Edit", new { id=Model.NewsID }) |
    @Html.ActionLink("返回列表", "Index")
</p>
